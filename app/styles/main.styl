body{
  color: white;
  background-color: #373833;
  font-size:90%;
}

li,ul,form {
  list-style:none;
  margin:0;
  padding:0;
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}


legend{
  color : #efefef
}
label{
  color : #efefef
}
hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #747977;
    margin: 1em 0;
    padding: 0;
}

*{
  font-family: Helvetica Neue, Helvetica, sans-serif
}

